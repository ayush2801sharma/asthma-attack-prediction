<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="Firebase App"
                android:textColor="@color/purple_500"
                android:textSize="30dp" />


            <TextView
                android:id="@+id/FirebaseData1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="Number1"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/FirebaseData01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_alignLeft="@id/FirebaseData1"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="-125dp"
                android:layout_marginTop="16dp"
                android:text="Number1"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/FirebaseData2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:text="Number1"
                android:textColor="@color/black"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/FirebaseData02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_alignLeft="@id/FirebaseData2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="-125dp"
                android:layout_marginTop="41dp"
                android:text="Number1"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/FirebaseData3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="65dp"
                android:text="Number1"
                android:textColor="@color/black"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/FirebaseData03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_alignLeft="@id/FirebaseData3"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="-124dp"
                android:layout_marginTop="64dp"
                android:text="Number1"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/FirebaseData4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="90dp"
                android:text="Number1"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/FirebaseData04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_alignLeft="@id/FirebaseData4"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="-125dp"
                android:layout_marginTop="90dp"
                android:text="Number1"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/FirebaseData5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="115dp"
                android:text="Number1"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/FirebaseData05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_alignLeft="@id/FirebaseData5"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="-126dp"
                android:layout_marginTop="115dp"
                android:text="Number1"
                android:textColor="@color/black"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/textview"
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FirebaseData5"
                android:layout_alignStart="@+id/FirebaseData05"
                android:layout_alignEnd="@+id/FirebaseData5"
                android:layout_marginStart="35dp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="-85dp"
                android:text="Find location"
                android:textColor="@color/purple_500"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/et_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="100dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="101dp"
                android:ems="10"
                android:hint="Enter city name"
                android:inputType="textPersonName"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/bt_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_place"
                android:layout_alignStart="@+id/et_place"
                android:layout_alignEnd="@+id/et_place"
                android:layout_marginStart="1dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="-3dp"
                android:text="Location" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="103dp"
                android:layout_below="@+id/bt_submit"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="115dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="41dp"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="550dp"
                android:hint="Enter Latitude" />

            <EditText
                android:id="@+id/et1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="590dp"
                android:hint="Enter Longitude" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="115dp"
                android:layout_marginTop="640dp"
                android:layout_marginEnd="148dp"
                android:onClick="get"
                android:text="Get PM Level"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="194dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="107dp"
                android:layout_marginTop="710dp"
                android:layout_marginEnd="110dp"

                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="194dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="107dp"
                android:layout_marginTop="770dp"

                android:layout_marginEnd="110dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attack Risk Prediction"
                android:textSize="23dp"
                android:textAlignment="center"
                android:layout_marginTop="820dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Humidity"
                android:id="@+id/humidity"
                android:layout_marginTop="850dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Temperature"
                android:id="@+id/temperature"
                android:layout_marginTop="890dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Gas"
                android:id="@+id/gas"
                android:layout_marginTop="930dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Heart Rate"
                android:id="@+id/heartrate"
                android:layout_marginTop="970dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sp02"
                android:id="@+id/spo2"
                android:layout_marginTop="1010dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PM 2.5"
                android:id="@+id/pm2"
                android:layout_marginTop="1050dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PM 10"
                android:id="@+id/pm10"
                android:layout_marginTop="1090dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PEFR"
                android:id="@+id/pefr"
                android:layout_marginTop="1130dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Predict"
                android:layout_marginTop="1190dp"
                android:id="@+id/predict" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="30dp"
                android:textAlignment="center"
                android:layout_marginTop="1240dp"
                android:id="@+id/result" />






        </RelativeLayout>
    </LinearLayout>
</ScrollView>